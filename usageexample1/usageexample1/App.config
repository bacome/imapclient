<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
  <system.diagnostics>
    <trace autoflush="true"></trace>
    <sources>
      <source name="usageexample1" switchName="traceswitch">
        <listeners>
          <remove name="Default"></remove>
          <add name="file"></add>
        </listeners>
      </source>
      <source name="work.bacome.cIMAPClient" switchName="traceswitch">
        <listeners>
          <remove name="Default"></remove>
          <add name="file"></add>
        </listeners>
      </source>
    </sources>
    <switches>
      <add name="traceswitch" value="Verbose"/>
    </switches>
    <sharedListeners>
      <add name="console"
           type="System.Diagnostics.ConsoleTraceListener">
      </add>
      <add name="file"
           type="System.Diagnostics.TextWriterTraceListener"
           initializeData="usageexample1.txt">
      </add>
    </sharedListeners>
  </system.diagnostics>
</configuration>